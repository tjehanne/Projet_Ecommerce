<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style pour le bouton de diminution de quantité -->
    <style name="QuantityButtonDecrease" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/decrease_button_color</item>
        <item name="android:text">-</item>
    </style>

    <!-- Style pour le bouton d'augmentation de quantité -->
    <style name="QuantityButtonIncrease" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/increase_button_color</item>
        <item name="android:text">+</item>
    </style>

    <!-- Style pour la barre de navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
    </style>

    <!-- Style pour les chips de filtres actifs -->
    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="closeIconTint">?attr/colorPrimary</item>
        <item name="closeIconVisible">true</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <!-- Style pour les chips de catégories dans le filtre -->
    <style name="Widget.App.Chip.Category" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="checkedIconVisible">false</item>
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="chipMinHeight">36dp</item>
    </style>

    <!-- Style pour les chips de catégories sélectionnées -->
    <style name="Widget.App.Chip.Category.Selected">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
    </style>
</resources>
